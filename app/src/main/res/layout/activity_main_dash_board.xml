<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".activity.MainDashBoard">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">


                <Button
                    android:id="@+id/dashbord_account_details_bv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#fff"
                    android:drawableTop="@drawable/ic_menu1"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:text="Account Details" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">


                <Button
                    android:id="@+id/dashbord_cancel_tiffin_bv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#fff"
                    android:drawableTop="@drawable/ic_menu2"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:text="Cancel Tifin" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">


                <Button
                    android:id="@+id/dashbord_cancel_tiffin_history_bv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#fff"
                    android:drawableTop="@drawable/ic_menu3"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:text="Canceled Tifin" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:elevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp">


                <Button
                    android:id="@+id/dashbord_contact_bv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="#fff"
                    android:drawableTop="@drawable/ic_menu4"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="About Us" />
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>

</LinearLayout>